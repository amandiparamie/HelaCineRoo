<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/viga"
        android:text="Languages"
        android:textColor="#FFFFFF"
        android:textSize="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/viga"
        android:text="Select your preferred language..."
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

    <LinearLayout
        android:id="@+id/firstLinearLayout"
        android:layout_width="394dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"/>

    <LinearLayout
        android:id="@+id/secondLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="185dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/firstLinearLayout"
        android:layout_marginTop="168dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonSinhala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:backgroundTint="#287B58"
            android:fontFamily="@font/voltaire"
            android:text="Sinhalese"
            android:textSize="18dp" />

        <Button
            android:id="@+id/buttonEnglish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:backgroundTint="#287B58"
            android:fontFamily="@font/voltaire"
            android:text="English"
            android:textSize="18dp" />

        <Button
            android:id="@+id/buttonTamil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:backgroundTint="#287B58"
            android:fontFamily="@font/voltaire"
            android:text="Tamil"
            android:textSize="18dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@id/secondLinearLayout"
        android:layout_marginStart="60dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/helacineroologo" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="820dp"
        android:src="@drawable/home" />

</RelativeLayout>
